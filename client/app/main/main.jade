div(ng-include='"components/navbar/navbar.html"')

div.jumbotron
  div.container.search__group
    h1.search__title Drug Database Search
    div.search.input-group.input-group-lg
      input#search.search__field.form-control(type='search', name='search')
      span.input-group-btn
        button.search__button.btn.btn-default(type='button')
          span.sr-only Search Database
          span.glyphicon.glyphicon-search(aria-hidden='true')
.container
  .row
    .col-lg-12
      h1.page-header Sample Search Result for https://api.fda.gov/drug/event.json?search=patient.drug.openfda.pharm_class_epc:"nonsteroidal+anti-inflammatory+drug"&count=patient.reaction.reactionmeddrapt.exact
      ul.nav.nav-tabs.nav-stacked.col-md-4.col-lg-4.col-sm-6(ng-repeat='reaction in adverseReactions')
        li
          a(href='#', tooltip='{{reaction.term}}')
            | term: {{reaction.term}} count: {{reaction.count}}

footer.footer
  .container
    p
      | Flexion
      = ' | '
      a(href='http://flexion.us/') flexion.us
